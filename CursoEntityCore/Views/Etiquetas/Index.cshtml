@model IEnumerable<CursoEntityCore.Models.Etiqueta>
@{
    ViewData["Title"] = "Lista de etiquetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de Etiquetas</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn-primary form-control">Crear Etiqueta</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(etiqueta => etiqueta.Etiqueta_Id)</th>
                <th>@Html.DisplayNameFor(etiqueta => etiqueta.Titulo)</th>
                <th>@Html.DisplayNameFor(etiqueta => etiqueta.Fecha)</th>
                <th></th>
            </tr>
            @foreach (var etiqueta in Model)
            {
                <tr>
                    <td>@etiqueta.Etiqueta_Id</td>
                    <td>@etiqueta.Titulo</td>
                    <td>@etiqueta.Fecha</td>

                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@etiqueta.Etiqueta_Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@etiqueta.Etiqueta_Id">Borrar</a>

                    </td>

                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Etiquetas</p>
    }
</div>
