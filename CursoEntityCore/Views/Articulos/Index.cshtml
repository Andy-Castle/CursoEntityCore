@model IEnumerable<CursoEntityCore.Models.Articulo>
@{
    ViewData["Title"] = "Lista de Articulos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de Artículos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear artículo</a>
    </div>
</div>


<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(articulo => articulo.Articulo_Id)</th>
                <th>@Html.DisplayNameFor(articulo => articulo.TituloArticulo)</th>
                <th>@Html.DisplayNameFor(articulo => articulo.Descripcion)</th>
                <th>@Html.DisplayNameFor(articulo => articulo.Fecha)</th>
                <th>@Html.DisplayNameFor(articulo => articulo.Calificacion)</th>
                <th>@Html.DisplayNameFor(articulo => articulo.Categoria)</th>
                <th></th>
            </tr>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.Articulo_Id</td>
                    <td>@articulo.TituloArticulo</td>
                    <td>@articulo.Descripcion</td>
                    <td>@articulo.Fecha</td>
                    <td>@articulo.Calificacion</td>
                    <td>@articulo.Categoria.Nombre</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@articulo.Articulo_Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@articulo.Articulo_Id">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay artículos</p>
    }
</div>